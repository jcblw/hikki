{
  "name": "hikki",
  "version": "0.6.1",
  "description": "Hikki is Japanese for Scribe, or notes. This node module with take comments from your code and mirror them as markdown files in a different directory.",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run test-setup && nyc tap tests/*.spec.js && nyc report",
    "docs": "./bin/hikki -f \"**/*.js\" -o docs -v -e \"node_modules|tests\"",
    "lint": "jshint index.js lib/*.js",
    "test-setup": "rm -rf tests/node_modules && cp -r tests/test_modules tests/node_modules"
  },
  "bin": {
    "hikki": "./bin/hikki"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcblw/hikki.git"
  },
  "keywords": [
    "documentation",
    "docs",
    "espirmia"
  ],
  "author": "Jacob Lowe",
  "license": "ISC",
  "dependencies": {
    "cliclopts": "^1.1.0",
    "esprima": "^4.0.0",
    "extend": "^3.0.1",
    "glob": "^7.1.2",
    "isstream": "^0.1.2",
    "minimist": "^1.1.1",
    "output-file": "^1.1.1"
  },
  "devDependencies": {
    "jshint": "^2.7.0",
    "nyc": "^11.4.1",
    "tap": "^11.1.0"
  },
  "config": {
    "nyc": {
      "exclude": [
        "tests",
        "node_modules"
      ]
    }
  }
}
